---
import ThemeSwitch from "./ThemeSwitch.astro";
---

<nav class="nav">
  <a href="https://mtim6921.github.io/" class="nav-logo hoverable">
    <span class="nav-logo-name">timur muedinov</span>
    <span class="nav-logo-occupation">developer, videographer</span>
  </a>
  <ul class="nav-links">
    <li><a class="hoverable" href="#about">About</a></li>
    <li><a class="hoverable" href="#skills">Stack</a></li>
    <li><a class="hoverable" href="#projects">projects</a></li>
    <li><a class="hoverable" href="#experience">experience</a></li>
    <li><a class="hoverable" href="#education">education</a></li>
  </ul>
  <ThemeSwitch />
  <a class="hoverable contact-btn" href="#contact"> Contact</a>
</nav>

<style>
  .nav {
    padding: 1rem 10rem;
    color: white;
    z-index: 2;
    max-height: 4rem;
    display: flex;
    margin: 0 auto;
    align-items: center;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.6),
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0)
    );
  }
  .nav-links {
    margin-left: auto;
    list-style: none;
    padding: 0;
  }

  li {
    color: var(--text-primary);
    font-family: "Roboto", sans-serif;
    font-size: 1.2rem;
    text-transform: capitalize;
    display: inline-block;
  }
  li a {
    text-decoration: none;
    color: inherit;
    transition: 0.2s ease;
  }
  li a:hover {
    color: var(--color-accent);
  }
  li:not(:last-child) {
    margin-right: 2rem;
  }
  .nav-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    text-transform: uppercase;
    font-family: "Lora", serif;
  }
  .nav-logo-name {
    font-family: "Roboto", sans-serif;
    font-size: 2rem;
    margin: 0;
  }
  .nav-logo-occupation {
    font-size: 1rem;
    font-family: "Source Code Pro", monospace;
  }
  .contact-btn {
    margin-left: auto;
    text-transform: uppercase;
    font-size: 1.5rem;
  }

  @media screen and (max-width: 768px) {
    .nav {
      padding: 1rem;
    }
    .nav-links {
      display: none;
    }
  }
</style>
